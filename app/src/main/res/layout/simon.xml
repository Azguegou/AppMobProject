<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/simonButton1"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/simonButton3"
        app:layout_constraintEnd_toStartOf="@+id/simonButton4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/simonButton2"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="47dp"
        android:background="@drawable/border"
        app:layout_constraintBaseline_toBaselineOf="@+id/simonButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simonButton3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/simonButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/Deconnexion"
        app:layout_constraintEnd_toStartOf="@+id/simonButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simonButton4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/simonButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/simonButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simonButton1"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/Deconnexion"
        android:layout_width="196dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:text="Quitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simonButton3" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="79dp"
        android:text="Score : "
        app:layout_constraintBottom_toTopOf="@+id/simonButton4"
        app:layout_constraintStart_toEndOf="@+id/simonButton1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>