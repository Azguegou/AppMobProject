        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/simonButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="73dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/simonButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simonButton3"
        app:layout_constraintTop_toBottomOf="@+id/simonButton1" />

    <Button
        android:id="@+id/simonButton3"
